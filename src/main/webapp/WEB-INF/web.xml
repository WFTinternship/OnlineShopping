<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.workfront.internship.servlets.LoginServlet</servlet-class>

    </servlet>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.workfront.internship.servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.workfront.internship.servlets.ProductServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>com.workfront.internship.servlets.ProductsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/productPage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/productsPage</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.workfront.internship.spring.SpringContextListener</listener-class>
    </listener>


</web-app>